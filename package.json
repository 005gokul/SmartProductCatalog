{
  "name": "SmartProductCatalog",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/resilience": "^4.1.0",
    "@sap/cds": "^9",
    "axios": "^1.11.0",
    "express": "^4"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-product-catalog-ui": "cds watch --open product-catalog-ui/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy SmartProductCatalog --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana"
      },
      "GroqAPI": {
        "kind": "rest",
        "credentials": {
          "url": "https://api.groq.com"
        }
      }
    },
    "[development]": {
      "requires": {
        "db": {
          "kind": "sqlite"
        }
      }
    },
    "sapux": [
      "app/product-catalog-ui"
    ]
  }
}
