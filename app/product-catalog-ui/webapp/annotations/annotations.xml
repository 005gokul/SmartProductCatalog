<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:Reference Uri="/odata/v4/catalog/$metadata">
        <edmx:Include Namespace="CatalogService" />
    </edmx:Reference>
    <edmx:DataServices>
        <Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="com.sap.catalog.productcatalogui.annotations.CatalogService">
            <Annotations Target="CatalogService.Products">
                <Annotation Term="UI.LineItem">
                    <Collection>
                        <Record Type="UI.DataField"><PropertyValue Property="Value" Path="name" /></Record>
                        <Record Type="UI.DataField"><PropertyValue Property="Value" Path="category" /></Record>
                        <Record Type="UI.DataField"><PropertyValue Property="Value" Path="features" /></Record>
                        <Record Type="UI.DataField"><PropertyValue Property="Value" Path="generatedDescription" /></Record>
                    </Collection>
                </Annotation>
                <Annotation Term="UI.Facets">
                    <Collection>
                        <Record Type="UI.ReferenceFacet">
                            <PropertyValue Property="Label" String="General Information" />
                            <PropertyValue Property="Target" AnnotationPath="@UI.FieldGroup#GeneralInfo" />
                        </Record>
                    </Collection>
                </Annotation>
                <Annotation Term="UI.FieldGroup" Qualifier="GeneralInfo">
                    <Record>
                        <PropertyValue Property="Data">
                            <Collection>
                                <Record Type="UI.DataField"><PropertyValue Property="Value" Path="name" /></Record>
                                <Record Type="UI.DataField"><PropertyValue Property="Value" Path="category" /></Record>
                                <Record Type="UI.DataField"><PropertyValue Property="Value" Path="features" /></Record>
                                <Record Type="UI.DataField"><PropertyValue Property="Value" Path="generatedDescription" /></Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>