<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:u="sap.ui.unified">
    <VBox id="_IDGenVBox" class="sapUiSmallMargin">
        <Title id="_IDGenTitle" text="Upload Product Image" />
        <u:FileUploader
            id="fileUploader"
            name="myFileUpload"
            tooltip="Upload your product image"
            width="100%"
            fileType="jpg,jpeg,png"
        />
        <Button id="_IDGenButton1" text="Analyze Image" press="com.sap.catalog.productcatalogui.ext.controller.ImageUploader.onAnalyzeImage" type="Emphasized" class="sapUiTinyMarginTop"/>
    </VBox>
</core:FragmentDefinition>